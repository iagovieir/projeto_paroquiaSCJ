{{#if configN}}
<!-- CSS do configN secretaria-->
    <style>
    .menulateral{
    display: flex;
    float: left;
    width: 18%;
    height: 100vh;
    flex-direction: column;
    background-color: #9f4747;
    position: fixed;
    }
    .opcoes{
        height: 80%;
    }
    .opcoes div{
        height: 10%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }
    .opcoes div a{
        display: flex;
        justify-content: center;
        align-items: center;
        text-decoration: none;
        color: #fff;
        font-family: Arial, Helvetica, sans-serif;
        height: 100%;
        width: 100%;
    }
    .opcoes div a:hover{
        background-color: #833232;
        transition: 0.5s ease-in-out;
    }
    .logo{
        height: 20%;
        display: flex;
        justify-content: center;
        align-items: flex-end;
    }
    .logo img{
        width: 6rem;
    }
    </style>
{{/if}}

