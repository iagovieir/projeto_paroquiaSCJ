{{#if partialsON}}
<!-- CSS do menu e roda pé geral-->

<!--menu-->
    <style>
    .menu{
        background-color: #9f4747;
        display: flex;
        justify-content: space-between;
        width: 100%;
        position: fixed;
    }
    .logo{
        width: 40%;
    }
    .logo img{
        width: 3rem;
    }
    .logo a{
        width: 100%;
        margin-left: 5rem;
    }
    .option{
        display: flex;
        align-items: center;
        width: 60%;
    }
    .option div{
        font-family:  Arial;
        font-weight: bold;
        font-size: max(8pt, 1.1vw);
        width: 16.6%;
        height: 100%;
    }
    .option div a{
        display: flex;
        align-items: center;
        justify-content: center;
        text-decoration: none;
        color: #fff;
        width: 100%;
        height: 100%;   
    }
    .option div a:hover{
        background-color: #833232;
        transition: 0.5s ease-in-out;
    }
    </style>
<!--rodapé-->
    <style>
        .footer{
            background-color: #9f4747;
            display: flex;
            justify-content: center;
            align-items: center;
        }
        .info2{
            width: 65%;
            display: flex;
            flex-direction: column;
            font-family: Arial;
            color: #fff;
        }
        .info2 .info h4{
            font-size: max(16pt, 1.1vw);      
        }
        .info2 .info h5{
            font-style: normal;
        }
        .info{
            width: 50%;
            display: flex;
            flex-direction: column;
            text-align: center;
        }
        .logoFooter{
            width: 35%;
            display: flex;
            justify-content: flex-end;
            align-items: center;
        }
        .logoFooter img{
            width: 8rem;
        }
